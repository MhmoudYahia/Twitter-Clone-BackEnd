extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Open the form and submit your new password
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${data.url}`, target='_blank') Reset your password
  p If you remembered your password, please ignore this email!
